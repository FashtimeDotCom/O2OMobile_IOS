<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="HeaderLoader_iPhone">
    
	<linear orientation="horizonal" class="wrapper">
		<linear orientation="vertical" class="inner-wrapper">
			<linear orientation="vertical" class="col1">
				<image id="arrow"/>
				<indicator id="ind"/>
			</linear>
			<linear orientation="vertical" class="col2">
				<label id="state2"/>
				<label id="date"/>
			</linear>
		</linear>
	</linear>
    
	<style type="text/css">
		.wrapper {
        width: 100%;
        height: auto;
		}
        
		.inner-wrapper {
        width: 280px;
        height: 30px;
        margin-top: 10px;
        margin-bottom: 6px;
        margin-left: 30px;
		}
        
		.col1 {
        width: 40px;
        height: 100%;
        position: absolute;
        left: 0px;
        top: 0px;
		}
		
		#arrow {
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0px;
        top: 0px;
        image-src:	url(arrow-down.png);
        image-mode:	fit;
		}
        
		#ind {
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0px;
        top: 0px;
        indicator-style: gray;
		}
        
		.col2 {
        width: 100%;
        height: 100%;
		}
        
		#state2 {
        width: 100%;
        height: 50%;
        color: #999;
        font-size: 13px;
        font-weight: lighter;
        text-align: center;
		}
        
		#date {
        width: 100%;
        height: 50%;
        color: #999;
        font-size: 13px;
        font-weight: lighter;
        text-align: center;
		}
	</style>
    
</ui>