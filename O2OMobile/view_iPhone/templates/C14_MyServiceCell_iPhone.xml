<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="C14_MyServiceCell_iPhone">

	<row id="mask" class="wrapper">
		<image id="icon"/>
		<col class="column">
			<label id="name"></label>
			<label id="price"></label>
		</col>
		<image class="arrow"/>
	</row>

	<style type="text/css">
      
	  ui {
		background-color: white;
	  }

		.wrapper {
			width: 100%;
			height: 54px;
		}

		#icon {
			width: 54px;
			height: 100%;
			padding: 8px;
			border-radius: 20px;
			border-width: 2px;
			border-color: #eee;
			image-mode: fit;
			image-src: url(b0_icon_1.png);
		}
		
		.column {
			width: 200px;
			height: 100%;
			padding-top: 6px;
			padding-bottom: 6px;
		}

		#name {
			width: 100%;
			height: 50%;
			color: #333;
			font-size: 13px;
			font-weight: lighter;
			text-align: left;
		}

		#price {
			width: 100%;
			height: 50%;
			color: #999;
			font-size: 13px;
			font-weight: lighter;
			text-align: left;
		}
		
		
		.arrow {
			position: absolute;
			right: 10px;
			top: 10px;
			width: 34px;
			height: 34px;
			image-mode: center;
			image-src: url(icon_indicator.png);
		}

	</style>
	
</ui>