<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="C3_EditNameBoard_iPhone">
    
    <col class="wrapper">
        
        <row class="field">
            <image class="bg"/>
            <label class="title">@{nickname}</label>
            <input class="text" id="nickname" placeholder="输入昵称"></input>
        </row>
		
    </col>
    
    <style type="text/css">
        
        .wrapper {
            width: 100%;
            height: 100%;
        }
		
		.field {
			width: 100%;
			height: 45px;
			margin-top: 14px;
			padding-left: 20px;
			padding-right: 20px;
		}
		
		.bg {
			position: absolute;
			left: 0px;
			top: 0px;
			width: 100%;
			height: 100%;
			image-mode: stretch;
			image-src: url(field_bg.png);
		}
		
		.title {
			width: 35%;
			height: 100%;
			color: #999;
			font-size: 14px;
			font-weight: bold;
			text-align: center;
		}
		
		.text {
			width: 65%;
			height: 100%;
			color: #666;
			font-size: 14px;
			font-weight: lighter;
			text-align: right;
			padding-right: 10px;
			padding-left: 10px;
		}
	
		#nickname {
			return-key: done;
			maxlength: 16;
		}

		#submit {
			position: absolute;
			left: 0px;
			bottom: 10px;
			width: 100%;
			height: 44px;
			font-size: 14px;
			padding-left: 10px;
			padding-right: 10px;
			background-color: #25BDE8;
			border-radius: 4px;
		}
		
	</style>
</ui>