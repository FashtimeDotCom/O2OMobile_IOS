<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="C17_ApplyFormBoard_iPhone">
    
    <col class="wrapper">
        
        <row id="select_type" class="field">
            <image class="bg"/>
            <label class="title">@{project_type}</label>
            <label class="text" id="type">@{please_select}</label>
			<image class="arrow"/>
        </row>

		<row id="select_first" class="field">
			<image class="bg"/>
            <label class="title">@{stair_category}</label>
			<label class="text" id="first">@{please_select}</label>
			<image class="arrow"/>
		</row>

		<row id="select_second" class="field">
			<image class="bg"/>
            <label class="title">@{second_category}</label>
			<label class="text" id="second">@{please_select}</label>
			<image class="arrow"/>
		</row>

    <button id="submit">@{submit_apply}</button>

    </col>
    
    <style type="text/css">
        
        .wrapper {
            width: 100%;
            height: 100%;
        }
		
		.field {
			width: 100%;
			height: 45px;
			margin-top: 14px;
			padding-left: 20px;
			padding-right: 20px;
		}
		
		.bg {
			position: absolute;
			left: 0px;
			top: 0px;
			width: 100%;
			height: 100%;
			image-mode: stretch;
			image-src: url(field_bg.png);
		}
		
		.title {
			width: 35%;
			height: 100%;
			color: #999;
			font-size: 14px;
			font-weight: bold;
			text-align: center;
		}
		
		.text {
			width: 65%;
			height: 100%;
			color: #999;
			font-size: 14px;
			font-weight: lighter;
			text-align: right;
			padding-right: 45px;
			padding-left: 10px;
			secure: true;
		}
		
		.arrow {
			position: absolute;
			top: 0px;
			right: 10px;
			width: 30px;
			height: 100%;
			image-mode: center;
			image-src: url(b3_arrow_down.png);
		}

		#submit {
			position: absolute;
			left: 0px;
			bottom: 10px;
			width: 100%;
			height: 44px;
			font-size: 14px;
			padding-left: 10px;
			padding-right: 10px;
			background-color: #25BDE8;
			border-radius: 4px;
		}
		
	</style>
</ui>