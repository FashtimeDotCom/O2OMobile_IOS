<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="H0_MessageCell_iPhone">
    <!--
     <row></row>
     -->
    <row id="mask" class="wrapper">
        <image id="dot"/>
        <col class="content-wrapper">
            <label id="content"></label>
            <label id="time"></label>
        </col>
        <image class="arrow" id="arrow"/>
        <view id="bottom-line"/>
    </row>
    
    <style type="text/css">
        
        .wrapper {
            width: 100%;
            height: 90px;
        }
    
        #dot {
            width: 10%;
            height: 100%;
            image-mode: center;
            image-src: url(dot_unread.png);
        }
        
        .content-wrapper {
            width: 80%;
            height: 100%;
            padding-bottom: 10px;
        }
        
        #content {
            width: 100%;
            height: 80%;
            font-size: 15px;
            font-weight: lighter;
            text-align: left;
            color: #7c7c7c;
            line-break: tail-trunc;
            line-num: 3;
        }
        
        #time {
            width: 100px;
            height: 20%;
            font-size: 14px;
            font-weight: lighter;
            color: #7c7c7c;
            text-align: left;
        }
        
        .arrow {
            width: 10%;
            height: 100%;
            image-mode: center;
            image-src: url(icon_indicator.png);
        }
        
        #bottom-line {
            position: absolute;
            left: 0px;
            bottom: 0px;
            width: 100%;
            height: 1px;
            background-color: #ccc;
            padding-left: 10px;
            padding-right: 10px;
        }
    
        </style>
</ui>