<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="F0_ProfileRateCell_iPhone">
	
	<col id="mask" class="wrapper">
		<row class="inner-wrapper">
			<row class="segment">
				<label class="content" id="praise_count">0</label>
                <label class="title">@{client_evaluate}</label>
			</row>
			<row class="segment">
				<label class="content" id="praise_rate">0%</label>
                <label class="title">@{good_reputation_proportion}</label>
			</row>
		</row>
        <image class="right-arrow"/>
		<view id="bottom-line"/>
	</col>
	
	<style type="text/css">
		
		ui {
			background-color: white;
		}

		.wrapper {
			width: 100%;
			height: 50px;
		}
		
		.inner-wrapper {
            margin-left: 10px;
			width: 300px;
			height: 100%;
		}
	
		.segment {
			width: 40%;
			height: 100%;
		}

		.segment .content {
			width: auto;
			height: 100%;
			color: #39bced;
			text-align: left;
			font-size: 14px;
			font-weight: lighter;
            margin-left: 5px;
		}

		.segment .title {
			width: auto;
			height: 100%;
			color: #333;
			text-align: left;
			font-size: 14px;
			font-weight: lighter;
		}

		.right-arrow {
			position: absolute;
			top: 0px;
			right: 10px;
			width: 30px;
			height: 100%;
			image-mode: center;
			image-src: url(icon_indicator.png);
		}

		#bottom-line {
			position: absolute;
			left: 0px;
			bottom: 0px;
			width: 100%;
			height: 1px;
			background-color: #ccc;
			padding-left: 10px;
			padding-right: 10px;
		}
		
	</style>
</ui>