<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="C0_ServerListBoard_iPhone">
    
    <col class="wrapper">
        <list id="list" orientation="v"/>
        <col class="bottom-area">
            <view class="bg"/>
            <label class="publish-text">@{publish_order}</label>
			<button id="publish"></button>
		</col>
        <C5_FilterCell_iPhone id="filter"/>
    </col>
    
    <style type="text/css">
        .wrapper {
            width: 100%;
            height: 100%;
        }
    
        #list {
            position: absolute;
            left: 0px;
            top: 0px;
            width: 100%;
            height: 100%;
        }
    
        .bottom-area {
            position: absolute;
            left: 0px;
            bottom: 0px;
            width: 100%;
            height: 60px;
        }
    
        .bg {
            width: 100%;
            height: 100%;
            left: 0px;
            bottom: 0px;
            position: absolute;
            alpha: 0.5;
            background-color: #D2D2D2;
        }
    
        .publish-text {
            width: 100%;
            height: 100%;
            padding: 6px;
            font-size: 17px;
            font-weight: bold;
            text-align: center;
            border-radius: 4px;
            text-color: #ffffff;
            background-color: #25BDE8;
            font-weight: lighter;
        }
    
        #publish {
            width: 100%;
            height: 100%;
            padding: 6px;
            font-size: 20px;
            font-weight: bold;
            border-radius: 4px;
            background-color: clearColor;
            position: absolute;
        }
    
        #filter {
            position: absolute;
            left: 0px;
            top: 0;
            width: 100%;
            height: 100%;
            display: none;
        }

        </style>
</ui>
