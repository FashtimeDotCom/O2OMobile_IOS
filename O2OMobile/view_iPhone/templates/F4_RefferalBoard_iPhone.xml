<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="F4_RefferalBoard_iPhone">
	
	<col class="wrapper">
		<web id="intro"/>
		<col class="bottom-area">
			<label id="code"></label>
            <button id="share">@{share_to_firend}</button>
		</col>
		<FXBlurView id="shareMask" class="mask-hide"/>
		<F4_RefferalShareCell_iPhone id="shareCell" class="cell-hide"/>
	</col>

	<style type="text/css">
	  
      .wrapper {
          width: 100%;
          height: 100%;
		}
		
		#intro {
			width: 100%;
			height: 100%;
			padding-bottom: 150px;
		}
		
		.bottom-area {
			position: absolute;
			left: 0px;
			bottom: 10px;
			width: 100%;
			height: 140px;
		}

		#code {
			width: 100%;
			height: 70%;
			color: #39bced;
			font-size: 24px;
			font-weight: lighter;
			text-align: center;
		}
		
		#share {
			width: 100%;
			height: 30%;
			padding-left: 10px;
			padding-right: 10px;
			color: white;
			font-size: 16px;
			font-weight: bold;
			border-radius: 4px;
			background-color: #39bced;
		}
	
		#shareMask {
			position: absolute;
			left: 0px;
			bottom: 0px;
			width: 100%;
			height: 100%;
			background-color: black 0.3;
		}
	
		.mask-hide {
			opacity: 0;
		}

		.mask-show {
			opacity: 1;
		}

		.cell-hide {
			position: absolute;
			left: 0px;
			bottom: -180px;
			width: 100%;
			height: 180px;
			opacity: 0;
		}

		.cell-show {
			position: absolute;
			left: 0px;
			bottom: 0px;
			width: 100%;
			height: 180px;
			opacity: 1;
		}

	</style>
	
</ui>
