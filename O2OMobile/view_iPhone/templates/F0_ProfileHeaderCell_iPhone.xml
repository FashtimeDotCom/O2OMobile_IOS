<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="F0_ProfileHeaderCell_iPhone">

	<col class="wrapper">
		<image id="cover"/>
		<view class="white"/>
		<row class="bottom">
			<col id="avatar_touched" class="avatar-area">
				<image id="avatar"/>
			</col>
			<col class="name-area">
				<label id="name"></label>
				<label id="sign"></label>
				<label id="balance"></label>
				<button id="refresh"/>
			</col>
		</row>
		<view id="bottom-line"/>
	</col>
   
	<style type="text/css">
		
		.wrapper {
			width: 100%;
			height: 200px;
		}
		
		#cover {
			position: absolute;
			left: 0px;
			top: 0px;
			width: 100%;
			height: 200px;
            mode: fill;
			image-src: url(profile_bg.png);
		}

		.white {
			position: absolute;
			left: 0px;
			bottom: 0px;
			width: 100%;
			height: 65px;
			background-color: white;
		}

		.bottom {
			position: absolute;
			left: 0px;
			bottom: 0px;
			width: 100%;
			height: 130px;
		}

		.avatar-area {
			width: 40%;
			height: 100%;
		}
		
		#refresh {
			position: absolute;
			top: 20px;
			right: 0px;
			width: 44px;
			height: 44px;
			image-mode: center;
			image-src: url(b5_redo_btn.png)
		}

		#avatar {
			width: 100px;
			height: 100px;
			float: center;
			v-float: center;
			background-color: #ccc;
			border-radius: 50px;
			border-color: white;
			border-width: 4px;
			image-mode: fit;
		}
	
		.name-area {
			width: 60%;
			height: 100%;
		}
	
		#name {
			width: 80%;
			height: 50%;
			color: white;
			text-align: left;
			font-size: 28px;
			font-weight: bold;
			margin-top: 10px;
            fit-width: true;
		}

		#sign {
			width: 100%;
			height: 15%;
			color: #666;
			text-align: left;
			font-size: 14px;
			font-weight: bold;
		}

		#balance {
			width: 100%;
			height: 15%;
			color: #39bced;
			text-align: left;
			font-size: 14px;
			font-weight: bold;
		}

		#bottom-line {
			position: absolute;
			left: 0px;
			bottom: 0px;
			width: 100%;
			height: 1px;
			background-color: #ccc;
			padding-left: 10px;
			padding-right: 10px;
		}
  
  </style>
</ui>